# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#UserController
POST    /addUser                    controllers.UserController.addUser
GET     /getUser/:id                controllers.UserController.getUser(id: Int)
GET     /listAllUsers               controllers.UserController.listAllUsers
PUT     /updateUser                 controllers.UserController.updateUser
DELETE  /deleteUser/:id             controllers.UserController.deleteUser(id: Int)

#PostController
POST    /addPost                    controllers.PostController.addPost
GET     /getPost/:id                controllers.PostController.getPost(id: Int)
PUT     /updatePost                 controllers.PostController.updatePost
DELETE  /deletePost/:id             controllers.PostController.deletePost(id: Int)

#LikeController
POST    /addLike                    controllers.LikeController.addLike
#GET    /getLike/:id                controllers.LikeController.getLikeController(id: Int)
DELETE  /removeLike                 controllers.LikeController.removeLike

#FriendRequestController
POST    /sendFriendRequest          controllers.FriendRequestController.sendFriendRequest
PUT     /acceptFriendRequest        controllers.FriendRequestController.acceptFriendRequest
DELETE  /declineFriendRequest       controllers.FriendRequestController.declineFriendRequest